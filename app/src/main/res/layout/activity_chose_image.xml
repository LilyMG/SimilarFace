<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/view_margin">

    <RelativeLayout
        android:id="@+id/image_control"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/view_margin"
        android:layout_marginRight="@dimen/view_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/target_face" />

        <Button
            android:id="@+id/select_image"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="selectImage"
            android:text="@string/select_image" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_faces"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#E0E0E0"
        android:verticalSpacing="@dimen/view_margin" />

    <ImageView
        android:id="@id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/view_margin"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_toEndOf="@+id/image_control"
        android:layout_toLeftOf="@+id/list_faces"
        android:layout_toRightOf="@+id/image_control"
        android:layout_toStartOf="@+id/list_faces"
        android:background="#E0E0E0"
        android:contentDescription="@string/face" />

</RelativeLayout>